{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Unit Tests",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceFolder}/test",
        "runtimeArgs": [
          "--inspect-brk",
          "${workspaceFolder}/test/node_modules/.bin/jest",
          "--runInBand"
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "port": 9229
      },
      {
        "name": "Integration Tests",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceFolder}/test",
        "runtimeArgs": [
          "--inspect-brk",
          "${workspaceFolder}/test/node_modules/.bin/jest",
          "--runInBand",
          "integration"
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "port": 9229
      },
      {
        "name": "Core",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "args": ["core/src/execute.ts"],
        "runtimeArgs": [
          "--inspect-brk",
          "--nolazy",
          "-r",
          "ts-node/register",
          "-r",
          "tsconfig-paths/register"
        ],
        "protocol": "inspector",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "port": 9229
      },
      {
        "name": "Worker",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "args": ["worker/src/execute.ts"],
        "runtimeArgs": [
          "--inspect-brk",
          "--nolazy",
          "-r",
          "ts-node/register",
          "-r",
          "tsconfig-paths/register"
        ],
        "protocol": "inspector",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "port": 9229
      }
    
    ]
  }