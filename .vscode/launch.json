{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Unit Tests",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceFolder}/test",
        "runtimeArgs": [
          "--inspect-brk",
          "${workspaceFolder}/test/node_modules/.bin/jest",
          "--runInBand"
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "port": 9229
      },
      {
        "name": "Integration Tests",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceFolder}/test",
        "runtimeArgs": [
          "--inspect-brk",
          "${workspaceFolder}/test/node_modules/.bin/jest",
          "--runInBand",
          "integration"
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "port": 9229
      },
      {
        "name": "Core",
        "type": "node",
        "request": "launch",
        "smartStep": false,
        "cwd": "${workspaceFolder}",
        "args": ["core/src/execute.ts"],
        "runtimeArgs": [
          "--inspect-brk",
          "--nolazy",
          "-r",
          "ts-node/register",
          "-r",
          "tsconfig-paths/register"
        ],
        "protocol": "inspector",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "port": 9229
      },
      {
        "name": "Worker",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "args": ["worker/src/execute.ts"],
        "env": {
          "NODE_PATH": "/usr/lib/node_modules",
          "PORT": "/dev/electron",
          "RST_PIN": "none",
          "SER_PRT": "/dev/ttyACM0",
          "DFU_PORT": "/dev/ttyACM0",
          "PLATFORM": "electron",
          "AZURE_STORAGE_CONNECTION_STRING":"BlobEndpoint=https://qaembeddeddeviceops.blob.core.windows.net/;QueueEndpoint=https://qaembeddeddeviceops.queue.core.windows.net/;FileEndpoint=https://qaembeddeddeviceops.file.core.windows.net/;TableEndpoint=https://qaembeddeddeviceops.table.core.windows.net/;SharedAccessSignature=sv=2019-12-12&ss=bf&srt=co&sp=rlx&se=2021-10-30T06:57:22Z&st=2020-10-29T22:57:22Z&spr=https&sig=ZAQO0WbV3DNuL%2F%2FN%2F7RuOPiJXwjynzJ4solxJdK43Uk%3D"
        },
        "runtimeArgs": [
          "--inspect-brk",
          "--nolazy",
          "-r",
          "ts-node/register",
          "-r",
          "tsconfig-paths/register"
        ],
        "protocol": "inspector",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "port": 9229
      },
      {
        "name": "Remote-Worker",
        "type": "node",
        "request": "attach",
        "address": "testrig00.localdomain",
        "localRoot": "${workspaceFolder}",
        "remoteRoot": "/home/pi/proteus",
        "protocol": "inspector",
        "internalConsoleOptions": "neverOpen",
        "port": 9229
      },
      {
        "name": "Remote-Core",
        "type": "node",
        "request": "attach",
        "address": "proteustestcore.local",
        //"localRoot": "${workspaceFolder}",
        //"remoteRoot": "/home/proteus/proteus",
        "protocol": "inspector",
        "internalConsoleOptions": "neverOpen",
        "port": 9229
      }

    ]
  }