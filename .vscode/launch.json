{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Unit Tests",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceFolder}/test",
        "runtimeArgs": [
          "--inspect-brk",
          "${workspaceFolder}/test/node_modules/.bin/jest",
          "--runInBand"
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "port": 9229
      },
      {
        "name": "Integration Tests",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceFolder}/test",
        "runtimeArgs": [
          "--inspect-brk",
          "${workspaceFolder}/test/node_modules/.bin/jest",
          "--runInBand",
          "integration"
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "port": 9229
      }
    
    ]
  }